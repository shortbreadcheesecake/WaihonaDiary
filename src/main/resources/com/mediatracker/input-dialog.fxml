<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mediatracker.InputDialogController">
    <Label fx:id="headerLabel" text="Заголовок" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <TextField fx:id="inputField" promptText="Введите значение"/>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="okButton" text="OK" onAction="#handleOk" styleClass="dialog-button"/>
        <Button fx:id="cancelButton" text="Отмена" onAction="#handleCancel" styleClass="dialog-button-cancel"/>
    </HBox>
</VBox>
